<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smartstar.christopherjohnson.tamagatchi.MainActivity">

    <TextView
        android:text="Hunger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/hungerBar"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4"
        android:paddingLeft="10dp"
        android:max="100" />

    <TextView
        android:text="Health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:layout_toStartOf="@+id/healthBar" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:id="@+id/healthBar"
        android:layout_toEndOf="@+id/textView4"
        android:paddingLeft="10dp"
        android:max="100" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/food" />

    <Button
        android:text="| |"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Affection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/healthBar"
        android:layout_alignParentEnd="true"
        android:id="@+id/affectionBar"
        android:layout_toEndOf="@+id/textView2"
        android:max="100"
        android:paddingLeft="10dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="20dp"
        android:id="@+id/space1"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eevee"
        android:id="@+id/eevee"
        android:layout_below="@+id/space1"
        android:layout_toEndOf="@+id/food"
        android:layout_marginTop="115dp"
        android:scaleX="1.6"
        android:scaleY="1.6" />

</RelativeLayout>
